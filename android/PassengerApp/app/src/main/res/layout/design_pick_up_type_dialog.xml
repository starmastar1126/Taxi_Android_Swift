<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appThemeColor_2"
    android:orientation="vertical">

    <com.view.MTextView
        android:id="@+id/pickUpTypeHTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:text="Select your PickUp type"
        android:textColor="@color/appThemeColor_TXT_2"
        android:textSize="@dimen/txt_size_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pickUpLaterArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pickUpLaterImgView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_pick_later" />

            <com.view.MTextView
                android:id="@+id/rideLaterTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Ride Later"
                android:textColor="@color/appThemeColor_TXT_2"
                android:textSize="@dimen/txt_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pickUpNowArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pickUpNowImgView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_pick_now" />

            <com.view.MTextView
                android:id="@+id/rideNowTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Ride Now"
                android:textColor="@color/appThemeColor_TXT_2"
                android:textSize="@dimen/txt_size_16" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/btn_type1"
        layout="@layout/btn_type_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp" />
</LinearLayout>