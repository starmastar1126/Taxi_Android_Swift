<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/monthName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Jan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/backdayNumber"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/dayName"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_fiber_manual_record_black_24dp"
        android:backgroundTint="@color/appThemeColor_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dayNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayName"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:text="21"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


    <TextView
        android:id="@+id/dayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Mon"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <View
        android:id="@+id/selection_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="#f00f0f"
        android:visibility="invisible" />

</RelativeLayout>
