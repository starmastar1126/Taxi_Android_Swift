<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.view.MTextView
        android:id="@+id/headerMsgTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Surge"
        android:textColor="#3A3A48"
        android:textSize="@dimen/txt_size_16"
        android:textStyle="bold" />

    <com.view.MTextView
        android:id="@+id/surgePriceTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="1.2x"
        android:textColor="#2f2f2f"
        android:textSize="29sp" />


    <com.view.MTextView
        android:id="@+id/payableTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="payable amount"
        android:textColor="#2f2f2f"
        android:textSize="@dimen/txt_size_18" />

    <com.view.MTextView
        android:id="@+id/payableAmountTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text=""
        android:textColor="#3A3A48"
        android:textSize="@dimen/txt_size_16"
        android:textStyle="bold"
        android:visibility="gone" />

    <include
        android:id="@+id/btn_type2"
        layout="@layout/btn_type_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_btn_height"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp" />

    <com.view.MTextView
        android:id="@+id/tryLaterTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TRY LATER"
        android:textColor="#6294AB"
        android:textSize="@dimen/txt_size_14" />

</LinearLayout>