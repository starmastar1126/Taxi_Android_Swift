<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fastcabtaxi.passenger.FareEstimateActivity">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/pickUpLocSearchArea"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#F5F5F5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/locPinImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:src="@mipmap/ic_search" />

                <com.view.MTextView
                    android:id="@+id/searchLocTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/txt_size_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/pickUpLocSearchArea"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/sourceLocTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/ic_from_point"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="#757575"
                        android:textSize="@dimen/txt_size_16" />

                    <com.view.MTextView
                        android:id="@+id/destLocTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/ic_to_point"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="#757575"
                        android:textSize="@dimen/txt_size_16" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#F1F1F1"
                        android:paddingBottom="5dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:stretchColumns="1,1">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <com.view.MTextView
                                android:id="@+id/baseFareHTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16" />

                            <com.view.MTextView
                                android:id="@+id/baseFareVTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewEnd"
                                android:textColor="#4c4c4c"
                                android:textSize="@dimen/txt_size_16" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <com.view.MTextView
                                android:id="@+id/commisionHTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16" />

                            <com.view.MTextView
                                android:id="@+id/commisionVTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewEnd"
                                android:textColor="#4c4c4c"
                                android:textSize="@dimen/txt_size_16" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical">

                            <com.view.MTextView
                                android:id="@+id/distanceTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16" />

                            <com.view.MTextView
                                android:id="@+id/distanceFareTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewEnd"
                                android:textColor="#4c4c4c"
                                android:textSize="@dimen/txt_size_16" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical">

                            <com.view.MTextView
                                android:id="@+id/minuteTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16" />

                            <com.view.MTextView
                                android:id="@+id/minuteFareTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end|center_vertical"
                                android:maxLines="1"
                                android:textAlignment="viewEnd"
                                android:textColor="#4c4c4c"
                                android:textSize="@dimen/txt_size_16" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/minFareRow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <com.view.MTextView
                                android:id="@+id/minFareHTxt"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:text="Minimum"
                                android:textAlignment="viewStart"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16" />

                            <com.view.MTextView
                                android:id="@+id/minFareVTxt"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end|center_vertical"
                                android:text="1.1"
                                android:textAlignment="viewEnd"
                                android:textColor="#4c4c4c"
                                android:textSize="@dimen/txt_size_16" />
                        </TableRow>


                    </TableLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@color/appThemeColor_2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp">

                        <com.view.MTextView
                            android:id="@+id/totalFareHTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textColor="@color/appThemeColor_TXT_2"
                            android:textSize="@dimen/txt_size_18" />

                        <com.view.MTextView
                            android:id="@+id/totalFareVTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:maxLines="1"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/appThemeColor_TXT_2"
                            android:textSize="@dimen/txt_size_18" />
                    </LinearLayout>

                    <fragment
                        android:id="@+id/mapV2"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/money_value_txt"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

            </LinearLayout>

            <com.view.anim.loader.AVLoadingIndicatorView
                android:id="@+id/loaderView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:visibility="gone"
                app:indicator="LineSpinFadeLoader"
                app:indicator_color="@color/appThemeColor_1" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
