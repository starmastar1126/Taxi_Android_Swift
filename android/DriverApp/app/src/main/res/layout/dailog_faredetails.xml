<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagecar"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center" />

        <com.view.MTextView
            android:id="@+id/carTypeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagarea"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_20"
            app:customTypeFace="roboto_light" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.view.MTextView
                android:id="@+id/capacityHTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagarea"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_14"
                app:customTypeFace="roboto_light" />

            <com.view.MTextView
                android:id="@+id/capacityVTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagarea"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#5f5f5f"
                android:textSize="@dimen/txt_size_14"
                app:customTypeFace="roboto_light" />

        </LinearLayout>


        <View
            android:id="@+id/leftSeperationLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#BABABA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:orientation="horizontal">

            <com.view.MTextView
                android:id="@+id/fareHTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagarea"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_14"
                app:customTypeFace="roboto_light" />

            <com.view.MTextView
                android:id="@+id/fareVTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagarea"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#5f5f5f"
                android:textSize="@dimen/txt_size_14"
                app:customTypeFace="roboto_light" />

        </LinearLayout>

        <com.view.MTextView
            android:id="@+id/mordetailsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagarea"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_14"
            app:customTypeFace="roboto_bold" />

        <com.view.MTextView
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:id="@+id/farenoteTxt"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagarea"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:gravity="start"
            android:text="This fare is based on our estimation. This may vary during trip and final fare."
            android:textColor="#5f5f5f"
            android:textSize="@dimen/txt_size_14"
            app:customTypeFace="roboto_light" />

        <include
            android:id="@+id/btn_type2"
            layout="@layout/btn_type_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_gravity="bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>

</LinearLayout>
