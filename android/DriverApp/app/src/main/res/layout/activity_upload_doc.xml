<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadDocActivity">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:background="#F1F5F8"
        android:orientation="vertical"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dummyInfoCardImgView"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:scaleType="centerInside"
                android:src="@drawable/default_doc_bg" />
            <ImageView
                android:id="@+id/imgeselectview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_right"
                android:tint="@color/appThemeColor_1"
                android:visibility="gone" />
        </RelativeLayout>

        <com.view.MTextView
            android:id="@+id/helpInfoTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#272727"
            android:textSize="@dimen/txt_size_17"
            app:customTypeFace="roboto_light" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/expDateSelectArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <include
            android:id="@+id/expBox"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:src="@mipmap/ic_arrow_down" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:orientation="vertical">


        <include
            android:id="@+id/btn_type2"
            layout="@layout/btn_type_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

    </LinearLayout>
</LinearLayout>
