<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:id="@+id/detailExpandArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/arrowImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_credit" />


                <com.view.MTextView
                    android:id="@+id/tranasctionBalVTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_size_18"
                    android:textStyle="normal"
                    app:customTypeFace="roboto_medium" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/transactionDetailArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <com.view.MTextView
                    android:id="@+id/transactionDesVTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="top|start|center"
                    android:minLines="1"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#323232"
                    android:textSize="@dimen/txt_size_14"
                    android:textStyle="normal"
                    app:customTypeFace="roboto_light" />

                <com.view.MTextView
                    android:id="@+id/transactiondateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#767676"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:customTypeFace="roboto_light" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>