<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout

        android:id="@+id/mainarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@android:color/white"

        android:orientation="horizontal"
        android:padding="8dp">


        <com.view.MTextView
            android:id="@+id/stratTimeTxtView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ic_circle"
            android:backgroundTint="@color/tw__light_gray"
            android:gravity="center"
            android:maxLength="3"
            android:padding="10dp"
            android:text="Sat"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.view.MTextView
            android:id="@+id/endTimeTxtView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5f5f5"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout


        android:id="@+id/selmainarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal"

        android:padding="8dp"
        android:visibility="gone">


        <com.view.MTextView
            android:id="@+id/stratselTimeTxtView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ic_circle"
            android:backgroundTint="@color/appThemeColor_1"
            android:gravity="center"
            android:maxLength="3"
            android:padding="10dp"
            android:text="Satdd"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.view.MTextView
            android:id="@+id/endselTimeTxtView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5f5f5"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout

        android:id="@+id/selarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal"

        android:padding="8dp"
        android:visibility="gone">


        <com.view.MTextView
            android:id="@+id/sTimeTxtView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ic_circle"
            android:backgroundTint="#f7e540"
            android:gravity="center"
            android:maxLength="3"
            android:padding="10dp"
            android:text="Satdd"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.view.MTextView
            android:id="@+id/eTimeTxtView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f5f5f5"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>
