<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/maker_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="63dp"
            android:layout_height="100dp"
            android:tint="@color/appThemeColor_1"
            android:src="@mipmap/ic_marker_provider" />

        <com.view.SelectableRoundedImageView
            android:id="@+id/providerImgView"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            app:sriv_left_bottom_corner_radius="29dp"
            app:sriv_left_top_corner_radius="29dp"
            app:sriv_right_bottom_corner_radius="29dp"
            app:sriv_right_top_corner_radius="29dp"
            app:sriv_border_color="@color/appThemeColor_Dark_1"
            app:sriv_border_width="1dip"/>

    </RelativeLayout>

</RelativeLayout>